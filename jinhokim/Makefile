NAME	=	echoServer
CC		=	c++
CFLAGS	=	-std=c++98 -Wall -Wextra -Werror

INC_DIR = 	includes
SRC_DIR = 	srcs

INCS 	=	$(addprefix $(INC_DIR)/, \
			Client.hpp \
			Server.hpp \
)

SRCS 	=	$(addprefix $(SRC_DIR)/, \
			Client.cpp \
			Server.hpp \
			main.cpp \
)

all		:	$(NAME)

$(NAME)	:	$(SRCS)
				$(CC) $(CFLAGS) -I $(INC_DIR) $(SRCS) -o $(NAME)

clean	:
			@ rm -f $(NAME)

fclean 	:	clean

re 		: 	fclean all

.PHONY	:	all clean fclean re